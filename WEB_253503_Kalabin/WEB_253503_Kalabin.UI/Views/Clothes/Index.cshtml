@{
    ViewBag.Title = "Index";
    IEnumerable<Category> categories = (IEnumerable<Category>)ViewData["categories"]!;

    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();
}

@model ListModel<Clothes>

<!-- выбор категории -->
<div class="col-2 border-2">
    <ul class="nav ">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle"
               data-bs-toggle="dropdown"
               href="#"
               role="button"
               aria-expanded="false">
                @ViewData["currentCategory"]
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item"
                       asp-controller="Clothes"
                       asp-route-genre=@null>
                        Все
                    </a>
                </li>
                @foreach (var item in categories)
                {
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Clothes"
                           asp-route-genre="@item.NormalizedName">
                            @item.Name
                        </a>
                    </li>
                }
            </ul>
        </li>
    </ul>
</div><!-- выбор категории -->

<div class="container">
    <div class="row">
        @foreach (var clothe in Model.Items)
        {
            <div class="col-md-4 mb-4" style="width: 300px; margin: 60px;">
                <!-- 4 колонки = 12/3 -->
                <div class="card h-100">
                    <img class="card-img-top" src="@clothe.Image" alt="Card image">
                    <div class="card-body">
                        <h5 class="card-title">@clothe.Name</h5>
                        <p class="card-text">@clothe.Description</p>
                        <a asp-controller="Cart" asp-action="Add" asp-route-id=@clothe.Id asp-route-returnUrl=@returnUrl class="btn btn-primary">Add to cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<nav aria-label="Page navigation example">
    <ul class="pagination">
        @{int prev = Model.CurrentPage == 1
         ? 1
         : Model.CurrentPage - 1;
         int next = Model.CurrentPage == Model.TotalPages
         ? Model.TotalPages
        : Model.CurrentPage + 1;
        }
        <li class="page-item">
            <a asp-route-pageNo=@prev asp-route-genre=@ViewData["currentCategoryNormalizedName"] class="page-link">Previous</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item">
                <a asp-route-pageNo=@i asp-route-genre=@ViewData["currentCategoryNormalizedName"] class="page-link @(i == Model.CurrentPage ? "active" : "")">@i</a>
            </li>
        }
        <li class="page-item">
            <a asp-route-pageNo=@next asp-route-genre=@ViewData["currentCategoryNormalizedName"] class="page-link">Next</a>
        </li>
    </ul>
</nav>


